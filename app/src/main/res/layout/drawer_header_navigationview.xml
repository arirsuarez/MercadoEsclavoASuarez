<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@drawable/background_abstract"
    android:orientation="vertical"
    >



        <ImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:src="@drawable/ic_account_circle_black_24dp"
            android:id="@+id/UserPhotoNavigationViewMenu"
            android:layout_centerVertical="true"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"/>



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#6A000000"
        android:orientation="vertical"
        >



        <TextView
            android:id="@+id/UserNameNavigationViewMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/UserMailNavigationViewMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mercadoesclavo14@mercado.com"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingBottom="5dp"/>


    </LinearLayout>


</RelativeLayout>